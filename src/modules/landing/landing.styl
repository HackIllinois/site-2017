body
  background-color: #212d5d

.cave
  height: 98vh
  width: auto
  position: relative
  left: 50%
  transform: translateX(-50%)
  overflow: hidden

.cave img
  width: 100%
  position: absolute
  top: 50%
  transform: translateY(-50%)

.caveMobileOnly
  display: none
  position: absolute
  top: 50%
  transform: translateY(-50%)
  height: 100vh
  background-image: url('../../assets/landing/landing-cave.svg')
  width: 100%
  background-repeat: no-repeat
  background-position: 50%

.cave .logo
  width: 100vw
  height: 200px
  position: absolute
  top: 46%
  transform: translateY(-50px)

.cave .logo img
  height: 120px

.cave .sign
  position: relative
  width: 100vw
  height: 100%
  top: 50%
  transform: translateY(-50%)

.cave .sign img
  width: 200px
  left: 60%
  top: 72%
  position: relative

@media (max-width: 1400px)
  .cave .sign img
    top: 68%
    width: 180px

@media (max-width: 1250px)
  .cave .sign img
    top: 66%
    width: 160px

@media (max-width: 1100px)
  .cave .sign img
    top: 64%
    width: 160px
  
  .cave .logo img
    height: 100px

@media (max-width: 1000px)
  .cave .sign img
    top: 62%
    width: 120px

@media (max-width: 800px)
  .cave .sign img
    top: 60%
    width: 100px

  .cave .logo img
    height: 80px

@media (max-width: 720px)
  .cave .sign img
    top: 58%
    width: 80px
  
  .cave .logo img
    height: 60px

@media (max-width: 600px)
  .cave
    display: none;
  
  .caveMobileOnly
    display: block